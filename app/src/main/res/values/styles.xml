<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Auth Screen Styles -->
    <style name="AuthScreens">
        <!-- Parent style for all auth screen elements -->
    </style>
    
    <style name="AuthScreens.Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="AuthScreens.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthScreens.Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="AuthScreens.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="startIconTint">@color/dark_gray</item>
        <item name="boxBackgroundColor">@color/very_light_gray</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/coffee_accent</item>
        <item name="endIconTint">@color/dark_gray</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="AuthScreens.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="AuthScreens.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/button_primary_background</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AuthScreens.Link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/coffee_accent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AuthScreens.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="AuthScreens.Logo">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:src">@drawable/logo_shield</item>
        <item name="android:contentDescription">App Logo</item>
    </style>

    <style name="AuthScreens.WelcomeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources> 